<%= form_with model: @user, url: registration_path, local: true do |form| %>
    <div>
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>
    <div>
      <%= form.submit "Sign up" %>
    </div>
  <% end %>