<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>search page</title>
</head>
<body>

  <h1>course search</h1>
  <form id="search-form">
    <div>
      <label for="searchstring">searchstring:</label>
      <input type="text" id="searchstring" name="searchstring" placeholder="Enter course title, description, etc.">
    </div>

    <div>
      <label for="term">term:</label>
      <select id="term" name="term">
        <option value="fall">fall</option>
        <option value="spring">spring</option>
        <option value="summer">summer</option>
        <option value="any">any</option>
      </select>
    </div>

    <div>
      <label for="year">year:</label>
      <select id="year" name="year">
        <option value="2025">2025</option>
        <option value="2024">2024</option>
        <option value="2023">2023</option>
        <option value="any">any</option>
      </select>
    </div>

    <div>
      <label for="departments">departments:</label>
      <div>
        <input type="checkbox" id="math" name="departments[]" value="math">
        <label for="math">math</label>
      </div>
      <div>
        <input type="checkbox" id="cmpt" name="departments[]" value="cmpt">
        <label for="cmpt">cmpt</label>
      </div>
      <div>
        <input type="checkbox" id="macm" name="departments[]" value="macm">
        <label for="macm">macm</label>
      </div>
      <div>
        <input type="checkbox" id="any" name="departments[]" value="any">
        <label for="any">any</label>
      </div>
    </div>

    <div>
      <label for="levels">levels</label>
      <div>
        <input type="checkbox" id="1XX" name="levels[]" value="1XX">
        <label for="1XX">1xx</label>
      </div>
      <div>
        <input type="checkbox" id="2XX" name="levels[]" value="2XX">
        <label for="2XX">2xx</label>
      </div>
      <div>
        <input type="checkbox" id="3XX" name="levels[]" value="3XX">
        <label for="3XX">3xx</label>
      </div>
      <div>
        <input type="checkbox" id="4XX" name="levels[]" value="4XX">
        <label for="4XX">4xx</label>
      </div>
      <div>
        <input type="checkbox" id="any" name="levels[]" value="any">
        <label for="any">any</label>
      </div>
    </div>

    <div>
      <label for="search_in_props">search_in_props:</label>
      <div>
        <input type="checkbox" id="title" name="search_in_props[]" value="title">
        <label for="title">title</label>
      </div>
      <div>
        <input type="checkbox" id="dept" name="search_in_props[]" value="dept">
        <label for="dept">department</label>
      </div>
      <div>
        <input type="checkbox" id="description" name="search_in_props[]" value="description">
        <label for="description">description</label>
      </div>
      <div>
        <input type="checkbox" id="instructors" name="search_in_props[]" value="instructors">
        <label for="instructors">instructors</label>
      </div>
      <div>
        <input type="checkbox" id="campuses" name="search_in_props[]" value="campuses">
        <label for="campuses">campuses</label>
      </div>
    </div>
    <button type="submit">search !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!</button>
  </form>

  <div id="search-results"></div>

  <h2>create a new user</h2>
  <form id="userForm">
    <label for="cas_user_id">CAS user id:</label>
    <input type="text" id="cas_user_id" name="cas_user_id">
    <br><br>
    <button type="button" onclick="createUser()">create user</button>
  </form>

  <h2>all user ids</h2>
  <button type="button" onclick="listAllUsers()">list all users</button>
  <ul id="userList"></ul>

  <h2>add courses to a user</h2>
  <form id="addCoursesForm">
    <label for="existingUserId">CAS user id</label>
    <input type="text" id="existingUserId" name="existingUserId">
    <br><br>
    <div id="newCoursesContainer">
      <div class="course">
        <label for="new_course_code_0">course code</label>
        <input type="text" id="new_course_code_0" name="course_code">
        <br><br>
        <label for="new_term_0">term:</label>
        <input type="text" id="new_term_0" name="term">
        <br><br>
      </div>
    </div>
    <button type="button" onclick="addAnotherCourse()">add another course</button>
    <br><br>
    <button type="button" onclick="addCourses()">add courses to user</button>
  </form>

  <h2>display user</h2>
  <form id="displayUserForm">
    <label for="searchUserId">CAS user id:</label>
    <input type="text" id="searchUserId" name="searchUserId">
    <br><br>
    <button type="button" onclick="displayUser()">display</button>
  </form>

  <h2>User Details</h2>
  <p id="userDetails"></p>
</form>

<script>
  document.getElementById('search-form').addEventListener('submit', function(event) {
    event.preventDefault();

    const searchstring = document.getElementById('searchstring').value;
    const term = document.getElementById('term').value;
    const year = document.getElementById('year').value;
    const departments = Array.from(document.querySelectorAll('input[name="departments[]"]:checked')).map(checkbox => checkbox.value);
    const levels = Array.from(document.querySelectorAll('input[name="levels[]"]:checked')).map(checkbox => checkbox.value);
    const search_in_props = Array.from(document.querySelectorAll('input[name="search_in_props[]"]:checked')).map(checkbox => checkbox.value);

    // Construct URLSearchParams
    const queryParams = new URLSearchParams({
      searchstring
    });

    // Append search_in_props array without indexing
    search_in_props.forEach(prop => queryParams.append('search_in_props[]', prop));

    // Append terms as a structured array (term, year)
    queryParams.append('terms[][year]', year);
    queryParams.append('terms[][term]', term);

    // Append departments and levels
    departments.forEach(dept => queryParams.append('departments[]', dept));
    levels.forEach(level => queryParams.append('levels[]', level));

    // Log constructed query for debugging
    //console.log(`Constructed Query: ${queryParams.toString()}`);

    // Fetch the search results
    fetch(`/courses/search?${queryParams.toString()}`, {
      method: 'GET',
      headers: {
        'Accept': 'application/json'
      }
    })
    .then(response => response.json())
    .then(data => {
      const resultsDiv = document.getElementById('search-results');
      resultsDiv.innerHTML = ''; // Clear previous results

      // Handle no results
      if (data.length === 0) {
        resultsDiv.innerHTML = '<p>No courses found.</p>';
      } else {
        // Display results
        data.forEach(course => {
          const courseDiv = document.createElement('div');
          courseDiv.classList.add('course');
          courseDiv.innerHTML = `
            <h2>${course.dept} ${course.number} - ${course.title}</h2>
            <p><strong>Term:</strong> ${course.term} ${course.year}</p>
            <p><strong>Credits:</strong> ${course.credits || 'no credits listed'}</p>
            <p><strong>Description:</strong> ${course.short_description || 'no description listed'}</p>
            <p><strong>Instructors:</strong> ${course.instructors.join(', ') || 'no instructor listed'}</p>
            <p><strong>Campuses:</strong> ${course.campuses.join(', ') || 'no campus listed'}</p>
            <p><strong>Delivery Methods:</strong> ${course.delivery_methods.join(', ') || 'no delivery methods listed'}</p>
          `;
          resultsDiv.appendChild(courseDiv);
        });
      }
    })
    .catch(error => console.error('Error:', error));
  });
  let newCourseCount = 1;

  function createUser() {
    const casUserId = document.getElementById('cas_user_id').value;

    fetch('/users', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      },
      body: JSON.stringify({
        user: { cas_user_id: casUserId, taken_courses: [] }
      })
    })
    .then(response => response.json())
    .then(data => {
      alert(data.errors ? `Error: ${data.errors.join(', ')}` : 'ser created successfully');
    });
  }

  function listAllUsers() {
fetch('/users', {
  method: 'GET',
  headers: { 'Accept': 'application/json' }
})
.then(response => response.json())
.then(data => {
  const userList = document.getElementById('userList');
  userList.innerHTML = '';

  data.forEach(user => {
    const listItem = document.createElement('li');
    listItem.textContent = user.cas_user_id;
    userList.appendChild(listItem);
  });
})
.catch(error => console.error('Error:', error));
}
  function addAnotherCourse() {
    const container = document.getElementById('newCoursesContainer');
    const courseDiv = document.createElement('div');
    courseDiv.className = 'course';
    courseDiv.innerHTML = `
      <label for="new_course_code_${newCourseCount}">course code:</label>
      <input type="text" id="new_course_code_${newCourseCount}" name="course_code">
      <br><br>
      <label for="new_term_${newCourseCount}">term:</label>
      <input type="text" id="new_term_${newCourseCount}" name="term">
      <br><br>
    `;
    container.appendChild(courseDiv);
    newCourseCount++;
  }

  function addCourses() {
    const userId = document.getElementById('existingUserId').value;
    const newCourses = [];
    for (let i = 0; i < newCourseCount; i++) {
      const courseCode = document.getElementById(`new_course_code_${i}`).value;
      const term = document.getElementById(`new_term_${i}`).value;
      if (courseCode && term) {
        newCourses.push({ course_code: courseCode, term: term });
      }
    }
    fetch(`/users/${userId}/add_courses`, {
      method: 'PATCH',
      headers: {
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      },
      body: JSON.stringify({ courses: newCourses })
    })
    .then(response => response.json())
    .then(data => {
      alert(data.errors ? `error: ${data.errors.join(', ')}` : 'courses added successfully');
    });
  }

  function displayUser() {
    const userId = document.getElementById('searchUserId').value;
    fetch(`/users/${userId}`, {
      method: 'GET',
      headers: { 'Accept': 'application/json' }
    })
    .then(response => response.json())
    .then(data => {
      const details = data.message ? data.message : 
        `CAS User ID: ${data.cas_user_id}\ntaken courses: ${JSON.stringify(data.taken_courses)}`;
      document.getElementById('userDetails').innerText = details;
    });
  }

</script>

</body>
</html>
